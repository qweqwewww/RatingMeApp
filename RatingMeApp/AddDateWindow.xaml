<Window x:Class="RatingMeApp.AddDateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RatingMeApp"
        mc:Ignorable="d"
        Title="RatingMe" Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#FF949494"
        WindowStyle="None"
        AllowsTransparency="True">
    <Window.Clip>
        <RectangleGeometry  Rect="0,0,400,200" RadiusX="15" RadiusY="15"/>
    </Window.Clip>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Grid.Row" Value="2"/>
            <Setter Property="Grid.RowSpan" Value="2"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="LightCyan"/>
            <Setter Property="Foreground" Value="DarkSlateGray"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Grid.ColumnSpan" Value="3"/>
            <Setter Property="Width" Value="125"/>
            <Setter Property="Clip">
                <Setter.Value>
                    <RectangleGeometry Rect="0,0,125,50" RadiusX="6" RadiusY="6"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="6"
                 Height="75" Width="275"
                 VerticalAlignment="Bottom" Padding="22"
                 TextAlignment="Left" FontSize="16"
                 Text="{Binding WeekDau}">
            <TextBox.Clip>
                <RectangleGeometry Rect="0,0,275,75" RadiusX="7" RadiusY="7"/>
            </TextBox.Clip>
        </TextBox>

        <Button Grid.Column="1"
                Click="Accept_Click"
                Content="Потвердить"/>

        <Button Grid.Column="4" 
                IsCancel="True"
                Content="Отмена"/>
    </Grid>
</Window>
