<Window x:Class="RatingMeApp.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RatingMeApp"
        mc:Ignorable="d"
        Title="RatingMe" Height="800" Width="1600"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Window.Clip>
        <RectangleGeometry  Rect="0,0,1600,800" RadiusX="15" RadiusY="15"/>
    </Window.Clip>

    <Window.Background>
        <LinearGradientBrush Opacity="0.8" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="Black" Offset="0.0"/>
            <GradientStop Color="Gray" Offset="0.25"/>
            <GradientStop Color="DarkGray" Offset="0.50"/>
            <GradientStop Color="LightGray" Offset="0.75"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <Style x:Key="TopButtonStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="LightCyan"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Clip">
                <Setter.Value>
                    <RectangleGeometry Rect="0,0,30,30" RadiusX="15" RadiusY="15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BurgerButtonStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="LightCyan"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Grid.Column" Value="1"/>
            <Setter Property="Grid.ColumnSpan" Value="8"/>
            <Setter Property="Visibility" Value="Visible"/>
            <Setter Property="Clip">
                <Setter.Value>
                    <RectangleGeometry Rect="0,0,400,50" RadiusX="5" RadiusY="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EditProfileButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="LightCyan"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Visibility" Value="Hidden"/>
            <Setter Property="Grid.Column" Value="3"/>
            <Setter Property="Grid.ColumnSpan" Value="4"/>
            <Setter Property="Clip">
                <Setter.Value>
                    <RectangleGeometry Rect="0,0,200,50" RadiusX="15" RadiusY="15"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top"
                    Height="50"
                    Width="1600"
                    VerticalAlignment="Top">
            <Grid Height="50">
                <Button Style="{StaticResource TopButtonStyle}"
                        Click="Close_CLick"
                        Margin="10" HorizontalAlignment="Right"
                        Content="X"/>
                <Button Background="LightCyan"
                        FontSize="20" FontWeight="Bold"
                        Width="30" Height="30"
                        Margin="10" Padding="0,0,0,9" HorizontalAlignment="Left" TextBlock.TextAlignment="Center" 
                        Click="Burger_Click"
                        BorderThickness="0" 
                        Content="+">
                    <Button.Clip>
                        <RectangleGeometry Rect="0,0,30,30" RadiusX="10" RadiusY="10"/>
                    </Button.Clip>
                </Button>
            </Grid>
        </StackPanel>

        <StackPanel DockPanel.Dock="Bottom"
                    Width="1600" Height="750"
                    VerticalAlignment="Top" Orientation="Horizontal">
            <Grid Width="1600" Height="750">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Grid.RowSpan="3"
                      Visibility="Hidden"
                      Name="ExpandBurger">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.Clip>
                        <RectangleGeometry Rect="0, 0, 200, 150" RadiusX="15" RadiusY="15"/>
                    </Grid.Clip>

                    <Button Style="{StaticResource BurgerButtonStyle}"
                            Click="Main_Click"
                            Content="Главная"/>

                    <Button Style="{StaticResource BurgerButtonStyle}"
                            Grid.Row="1"
                            Click="Schedule_Click"
                            Content="Расписание"/>

                    <Button Style="{StaticResource BurgerButtonStyle}"
                            Grid.Row="2"
                            Content="Успеваемость"/>

                    <Button Style="{StaticResource BurgerButtonStyle}"
                            Grid.Row="3"
                            Click="EditWin_Click"
                            Content="Редактировать профиль"/>
                </Grid>

                <Grid Grid.Row="1" Grid.Column="11" Grid.ColumnSpan="10" Grid.RowSpan="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.Background>
                        <SolidColorBrush Color="White" Opacity="0.9"/>
                    </Grid.Background>
                    <Grid.Clip>
                        <RectangleGeometry Rect="0,0,500,600" RadiusX="10" RadiusY="10"/>
                    </Grid.Clip>

                    <Label Grid.Row="1" Grid.Column="2" Grid.RowSpan="6" Grid.ColumnSpan="6"
                           Background="#FFBFBFBF">
                        <Label.Clip>
                            <RectangleGeometry Rect="0,0,300,300" RadiusX="10" RadiusY="10"/>
                        </Label.Clip>
                    </Label>

                    <Image Grid.Row="1" Grid.Column="2" Grid.RowSpan="6" Grid.ColumnSpan="6"
                           Name="ProfilePic"
                           Panel.ZIndex="2"
                           Height="300" Width="300"
                           Stretch="Fill">
                        <Image.Clip>
                            <RectangleGeometry Rect="0,0,300,300" RadiusX="10" RadiusY="10"/>
                        </Image.Clip>
                    </Image>

                    <TextBlock Style="{StaticResource TextBlockStyle}"
                               Grid.Row="10"
                               Name="InfoStudent"/>

                    <TextBlock Style="{StaticResource TextBlockStyle}"
                               Grid.Row="8"
                               Name="InfoGroup"/>

                    <Button Style="{StaticResource EditProfileButtonStyle}"
                            Name="AddPicture"
                            Grid.Row="8"
                            Click="AddPicture_Click"
                            Content="Изменить фотографию"/>

                    <Button Style="{StaticResource EditProfileButtonStyle}"
                            Name="EditPassword"
                            Grid.Row="10"
                            Click="EditPassword_Click"
                            Content="Изменить пароль"/>
                </Grid>
            </Grid>
        </StackPanel>
    </DockPanel>
</Window>
